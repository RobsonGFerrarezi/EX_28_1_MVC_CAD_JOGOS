@model List<JogoViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listagem de Jogos</h2>

<a href="/jogo/create">Cadastrar novo jogo</a>
<br />

<table class="table table-responsive">
    <tr>
        <th>Ações</th>
        <th>Código</th>
        <th>Nome</th>
        <th>Data de lançamento</th>
        <th>Categoria</th>
        <th>Valor</th>
    </tr>
    @foreach (var jogo in Model)
    {
        <tr>
            <td>
                <a href="/jogo/edit?id=@jogo.Id" class="btn btn-info">Alterar</a>
                <a href="javascript:excluirJogo(@jogo.Id)" class="btn btn-danger">Excluir</a>
            </td>
            <td>@jogo.Id</td>
            <td>@jogo.Descricao</td>
            <td>@jogo.DataAquisicao.ToShortDateString()</td>
            <td>@jogo.CategoriaID - @jogo.DescricaoCategoria</td>
            <td>@jogo.Valor.ToString("0.00")</td>

        </tr>
    }
</table>
<script>
    function excluirJogo(id) {
        if (confirm('Deseja apagar?'))
            location.href = '/jogo/delete?id=' + id;
    }
</script>